{
    "name": "Connect Reports",
    "description": "Standard set of reports for CloudBlue Connect",
    "version": "1.0.0",
    "language": "python",
    "reports": [
        {
            "id": "fulfillment_requests",
            "name": "Fulfillment requests report",
            "description": "# Requests Report\nThis report provides a view of all transactions received for a given period of time\nThe generated report will provide a row for each item on the request.\nReport accepts to limit the output by:\n* List of products\n* Type of request\n* Status of the request\n* List of marketplaces\n* List of hubs",
            "template": "templates/fulfillment_requests.xlsx",
            "start_row": 2,
            "start_col": 1,
            "entrypoint": "reports.fulfillment_requests.generate",
            "audience": [
                "provider",
                "vendor"
            ],
            "report_spec": 1,
            "parameters": [
                {
                    "id": "date",
                    "type": "daterange",
                    "name": "Report period",
                    "required": true
                },
                {
                    "id": "product",
                    "type": "product_list",
                    "name": "Select the product or products to run the report"
                },
                {
                    "id": "rr_type",
                    "type": "fulfillment_type_list",
                    "name": "Select the type of request"
                },
                {
                    "id": "rr_status",
                    "type": "fulfillment_status_list",
                    "name": "Select the request status"
                },
                {
                    "id": "mkp",
                    "type": "marketplace_list",
                    "name": "Select the marketplaces"
                },
                {
                    "id": "hub",
                    "type": "hubs_list",
                    "name": "Select the Hubs"
                }
            ]
        },
        {
            "id": "failed_requests_with_reason",
            "name": "Fulfillment requests failed with vendor reason",
            "description": "# Requests Report\n\nThis report provides a view of all failed requests received for a given period of time together with the reason that was provided when failing it.\n\nReport accepts to limit the output by:\n* Type of request\n* List of products\n* Type of transaction (preview, test or production)",
            "template": "templates/fulfillment_requests_list.xlsx",
            "start_row": 2,
            "start_col": 1,
            "entrypoint": "reports.fulfillment_requests_failed.generate",
            "report_spec": 1,
            "audience": [
                "provider",
                "vendor"
            ],
            "parameters": [
                {
                    "id": "date",
                    "type": "daterange",
                    "name": "Report period",
                    "required": true
                },
                {
                    "id": "rr_type",
                    "type": "fulfillment_type_list",
                    "name": "Select the type of request"
                },
                {
                    "id": "product",
                    "type": "product_list",
                    "name": "Select the products to include from report"
                },
                {
                    "id": "connection_type",
                    "type": "connection_type",
                    "name": "Select the type of transaction"
                }
            ]
        },
        {
            "id": "billing_requests",
            "name": "Billing requests report",
            "description": "# Billing Requests Report\nThis report provides a view of all billing transactions generated for a given period of time\nThe generated report will provide a row for each item on the billing request and will include vendor billing requests and provider ones if any.\nReport accepts to limit the output by:\n* List of products\n* List of marketplaces\n* List of hubs",
            "template": "templates/billing_requests.xlsx",
            "start_row": 2,
            "start_col": 1,
            "entrypoint": "reports.billing_requests.generate",
            "audience": [
                "provider",
                "vendor"
            ],
            "report_spec": 1,
            "parameters": [
                {
                    "id": "date",
                    "type": "daterange",
                    "name": "Report period",
                    "required": true
                },
                {
                    "id": "product",
                    "type": "product_list",
                    "name": "Select the product or products to run the report"
                },
                {
                    "id": "mkp",
                    "type": "marketplace_list",
                    "name": "Select the marketplaces"
                },
                {
                    "id": "hub",
                    "type": "hubs_list",
                    "name": "Select the Hubs"
                }
            ]
        }
    ]
}